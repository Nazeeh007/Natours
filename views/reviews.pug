extends base

block content 
    main.main
        .card-container
            each review in reviews
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
                        h3.heading-tertirary
                            span= review.tour.name
                    .card__details
                        h4.card__sub-heading=`Your review`
                        p.card__text=review.review
                        
                    .card__footer
                        p.card__ratings
                            span.card__footer-value=`View other reviews` 
                        a.btn.btn--green.btn--small(href=`/tour/${review.tour.slug}`) Details 